{
  "name": "Refgen",
  "version": "1.4.0",
  "manifest_version": 3,
  "description": "Generate referrer for current page.",
  "author": "Reorx <novoreorx@gmail.com>",
  "icons": {
    "16": "logo-947.png",
    "48": "logo-947.png",
    "128": "logo-947.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+U",
        "mac": "Command+U"
      }
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ]
}
